CC = gcc
CFLAGS = -Wall

CFLAGS = -Wall $(shell pkg-config --cflags gtk+-3.0)
LIBS += $(shell pkg-config --libs gtk+-3.0)


SRCS = interfaz.c funciones_ig.c
OBJS = $(SRCS:.c=.o)
TARGET = interfaz

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(TARGET) $(LIBS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f interfaz $(OBJS)